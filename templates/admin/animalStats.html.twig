{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content %}
    <div class="easyadmin-animal-stats">
        <h1 class="m-3">Statistiques des Animaux</h1>

        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Animal</th>
                    <th>Nombre de Clicks</th>
                </tr>
            </thead>
            <tbody>
                {% for animal in animals %}
                    <tr>
                        <td>{{ animal.getAnimalName() }}</td>
                        <td>{{ animal.getClickCount() }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
