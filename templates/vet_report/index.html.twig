{% extends 'base.html.twig' %}

{% block title %}Rapports Vétérinaire | Arcadia Zoo{% endblock %}

{% block body %}
    
<h1 class="text-center m-5">Rapports vétérinaire</h1>

<div class="container">
    <div class="row">
        <div class="col-lg-2 col-md-12 border p-2">
            <p class="fw-bold">Filtres et tris</p>
            <form id="filters">
                <label for="date" name="date">Dates</label>
                <select id="sortSelect" name="date" class="form-select">
                    <option value="">Trier par date</option>
                    <option value="asc">Par ordre croissant</option>
                    <option value="desc">Par ordre décroissant</option>
                </select>
                
                <div class="d-flex flex-column mt-3">
                    <p>Animal</p>
                    <div class="container">
                        <div class="form-check form-switch">
                            <div class="row">
                                {% for animal in animals %}
                                    <div class="col-lg-12 col-md-6">
                                        <div class="d-flex">
                                            <input type="checkbox" name="animal[]" id="{{ animal.id }}" value ="{{ animal.id }}" class="form-check-input me-2" checked>
                                            <label for="{{ animal.id }}" class="form-check-label">{{ animal.name }} </label>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                            <div class="d-flex mt-4">
                                <input type="checkbox" id="cc" onclick="checkAll(this)" class="form-check-input me-2" checked>
                                <label for="cc" class="form-check-label fst-italic">Tout sélectionner</label>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>

        <div class="col-10">
            <div id="content">
                {% include ('vet_report/_content.html.twig') %}
            </div>
        </div>

    </div>
</div>

    <script src="{{ asset('assets/js/reportFilters.js') }}"></script>
    <script src="{{ asset('assets/js/checkboxes.js') }}"></script>
{% endblock %}
