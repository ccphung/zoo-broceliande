{% extends 'base.html.twig' %}

{% block title %}Parc Zoologique - Zoo Brocéliande !{% endblock %}

{% block body %}

<header class="hero">
    <img src="{{ asset('images/hero/hero.jpg') }}"  class="hero-image" alt="hero image"> 
        <div class="hero-content raleway large-font">
            Offrez vous une visite inoubiable
        </div>
</header>

{# Habitat #}
<section class="habitat-section m-5">
    <div class="large-circle hidden m-5">
        <a href="#">
            <img class="large-img habitat-img" src="{{ asset('images/animal/lion.jpg') }}" alt="">
        </a>
    </div>
    <div class="d-flex flex-column justify-content-center align-items-center">
        <h2 class="large-font englebert-regular">Les merveilleux habitats</h2>
        <p class="small-font">Découvrez les divers habitats et les animaux qui y vivent</p>
        <a href="{{ path('app_habitat')}}" class="btn btn-green">Je découvre les habitats ></a>
    </div>
</section>

{# Service #}
<section class="service-section p-5">
    <h2 class="large-font englebert-regular text-center text-white">Services & Activités</h2>
    <p class="text-white text-center small-font my-5">Laissez-vous guider à travers nos diverses <span class="fw-bold">activités</span> et découvrez nos nombreux <span class="fw-bold">services de restauration</span>.</p>
    <div class="owl-carousel owl-theme d-flex">
        <div class="item hover-translate">
            <div class="polygon m-2">
                <a href=""><img class="large-img habitat-img" src="{{ asset('images/service/guide.jpg') }}" alt=""></a>
            </div>
            <p class="text-white text-center small-font">RESTAURATION</p>
            <p class="text-white text-center medium-font raleway fw-bold">Nos différents restaurants</p>
        </div>
        <div class="item hover-translate">
            <div class="polygon m-2">
                <img class="large-img habitat-img" src="{{ asset('images/service/restaurant.jpg') }}" alt="">
            </div>
            <p class="text-white text-center small-font">RESTAURATION</p>
            <p class="text-white text-center medium-font raleway fw-bold">Nos différents restaurants</p>
        </div>
        <div class="item hover-translate">
            <div class="polygon m-2">
                <img class="large-img habitat-img" src="{{ asset('images/service/train.jpg') }}" alt="">
            </div>
            <p class="text-white text-center small-font">RESTAURATION</p>
            <p class="text-white text-center medium-font raleway fw-bold">Nos différents restaurants</p>
        </div>
    </div>
    <div class="d-flex flex-column align-items-center justify-content-center mt-3">
        <p class="medium-font yellow raleway text-center">Explorez tous nos fabuleux services ici!</p>
        <a href="#" class="btn btn-yellow">Je découvre les services ></a>
    </div>
</section>

{# Last review #}
<section>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="review-shape m-5">
                    <div class="text-center margin-large">
                        <h2 class="medium-font englebert-regular yellow mb-5">Ils ont donné leur avis</h2>
                        <div class="d-flex flex-column justify-content-end">
                            <p class="medium-large-font comment-text"> "{{lastreview.comment}}"</p>
                            <p class="small-font fst-italic"> ~ {{lastreview.pseudo}} le {{lastreview.date|date("d/m/Y", "Europe/Paris")}} ~</p>
                            <btn href="#" class="btn btn-blue mt-2 openbtn" onclick="openNav()">&#9776; Voir tous les avis</btn> 
                        </div>
                        <div class="d-flex justify-content-center">
                            <a href="{{ path('app_review')}}" class="light-blue">Je donne mon avis</a>                
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <img src="{{ asset('images/animal/fox.jpg')}}" alt="fox" class="full-width hidden">
</section>

{# Side panel#}
<section>
    <div id="mySidepanel" class="sidepanel">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
        <h3 class="medium-font yellow text-center englebert-regular m-3">Tous les avis</h3>
        <div class="yellow-separator"></div>
        {% for review in reviews %}
            <div class="m-3">
                <p class="medium-font text-center">"{{review.comment}}"</p>
                <p class="small-font fst-italic text-center">~ {{review.pseudo}} le {{review.date|date("d/m/Y", "Europe/Paris")}} ~</p>
                <div class="blue-separator"></div>
            </div>
        {% endfor %}
    </div>
</section>


<script src=" {{ asset('/assets/js/owlcarousel.js') }}"></script>
<script src=" {{ asset('/assets/js/sidepanel.js') }}"></script>
{% endblock %}
