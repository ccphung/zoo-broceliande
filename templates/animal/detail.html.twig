{% extends 'base.html.twig' %}

{% block title %}{{ animal.name }} | Arcadia Zoo{% endblock %}

{% block body %}
<div class="animal-container p-5">
    <h1 class="large-font englebert-regular blue text-center green">{{ animal.name }}</h1>
    <div class="green-separator mb-5"></div>

    <div class="container-fluid">
        <div class="row d-flex justify-content-center">
            <div class="col-lg-5 col-md-12">
                <div class="card">
                    <div class="card bg-dark text-white">
                        <img src="{{ asset(vich_uploader_asset(animal)) }}" alt="{{ animal.imageName }}" class="card-img">
                    </div>
                </div>
            </div>
            <div class="col-lg-5 col-md-12 mt-3 text-white">
            <h2 class="englebert-regular medium-font mt-3 text-center">Détail de l'animal</h2>
                <p class="small-font"><span class="green">Prénom : </span>{{ animal.name }}</p>
                <p class="small-font"><span class="green">Espèce : </span>{{ animal.species }}</p>
                <p class="small-font"><span class="green">Habitat : </span> 
                    <a href="{{ path('habitat_details', {'slug': animal.habitat}) }}" class="yellow">{{ animal.habitat}}</a>
                </p>
                <p class="small-font"><span class="green">Description : </span>{{ animal.detail }}</p>

                {% if report %}
                <h2 class="englebert-regular medium-font mt-5 text-center">Avis du vétérinaire</h2>
                <p class="small-font"><span class="green">Date de la visite: </span>{{ report.visitDate|date("d/m/Y", "Europe/Paris")}}</p>
                <p class="small-font"><span class="green">Etat: </span>{{ report.animalCondition }}</p>

                    <p class="small-font"><span class="green">Détail: </span>{{ report.animalConditionDetail }}</p>
                {% endif %}
                
            </div>
        </div>
    </div>
</div>

{% endblock %}
