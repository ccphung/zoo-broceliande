{% extends 'base.html.twig' %}

{% block title %}Venir au parc | Arcadia Zoo{% endblock %}

{% block body %}

<div class="d-flex justify-content-center">
    <div class="hidden m-5">
        <img src="{{asset('images/animal/suricat.jpg')}}" alt="suricat" class="medium-circle">
    </div>

    <div>
        <h1 class="mt-5 text-center large-font englebert-regular">Venir au parc</h1>
        <div class="black-separator mb-4"></div>

        <h3 class="medium-font fw-bold yellow">Adresse</h3>
        <p class="small-font">Domaine du Faubourg</p>
        <p class="small-font">35380 Paimpont</p>

        <h3 class="medium-font fw-bold yellow mt-4">En voiture</h3>
        <p class="small-font"><span class="fw-bold">A11 :</span> sortie 10-Prte de Lorient</p>

        <h3 class="medium-font fw-bold yellow mt-4">En transport</h3>
        <p class="small-font"><span class="fw-bold">En avion :</span> Aéroport de Renne Bretagne</p>
        <p class="small-font"><span class="fw-bold">En bus :</span> 1a arrêt Paimpon</p>
    </div>
</div>



<h2 class="text-center mt-5 medium-font">Localisation et Itinéraires</h2>
<div class="d-flex justify-content-center mx-2 mb-5">
    <div class="mapouter">
        <div class="gmap_canvas">
            <iframe width="600" height="500" id="gmap_canvas" src="https://maps.google.com/maps?q=broc%C3%A9liande%20foret&t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0">
            </iframe>
        </div>
    </div>
</div>

<div class="d-flex justify-content-center">
    <a href="{{ path('app_opening_hours') }}" class="btn btn-blue m-5">
        <i class="fa-regular fa-clock me-2"></i>Je consulte les horaires 
    </a>
</div>


{% endblock %}
