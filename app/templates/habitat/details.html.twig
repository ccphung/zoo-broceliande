{% extends 'base.html.twig' %}

{% block title %}{{habitat.name}} | Arcadia Zoo{% endblock %}

{% block body %}    
    <div class="habitat-container">
        <h2 class="large-font fw-bold yellow text-center mt-5 englebert-regular pt-5">{{habitat.name}}</h2>
        <div class="green-separator"></div>

        <div class="container-fluid mt-5">
            <div class="row d-flex justify-content-center">
                <div class="col-lg-6 col-md-12 d-flex justify-content-center align-items-center">     
                    <div class="card">
                        <div class="card bg-dark text-white">
                            <img src="{{ asset(vich_uploader_asset(habitat)) }}" alt="{{ habitat.imageName }}" class="card-img">
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-12 d-flex flex-column">
                    <p class="small-font"> <span class="green fw-bold">Superficie :</span> <span class="text-white">{{habitat.area}}km²</span></p>
                    <p class="small-font"> <span class="green fw-bold">Description :</span> <span class="text-white">{{habitat.description}}</span></p>

                </div>
            </div>
        </div>

        <h3 class="green text-center englebert-regular medium-large-font m-5">Découvez les stars de l'habitat</h3>
        <div class="container-fluid pb-5">
            <div class="row">
                {% for animal in habitat.animals %}
                    <div class="col-lg-3 col-md-6">
                        <div class="circle-img-container">
                            <img src="{{ asset(vich_uploader_asset(animal)) }}" alt="{{ animal.imageName }}" class="circle-img">
                        </div>
                        <div class="d-flex justify-content-center mt-0 mb-3">
                            <a href="{{ path('app_animal_detail', {'slug': animal.name}) }}" class="btn btn-yellow">Découvrir {{ animal.name }}</a>
                        </div>
                    </div>
                {% else %}
                    <div class="text-white">Aucun animal dans cet habitat.</div>
                {% endfor %}
            </div>

        </div>
    </div>

    {% endblock %}